<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resep : "
                        android:fontFamily="@font/g_bold"
                        android:textSize="25dp"
                        android:textColor="#FFC107"/>

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Makanan"
                        android:fontFamily="@font/g_bold"
                        android:textSize="25dp"
                        android:textColor="#402B00"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jumlah Kalori : "
                        android:fontFamily="@font/g_light"
                        android:textSize="15sp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="kkal"
                        android:fontFamily="@font/g_light"
                        android:textSize="15dp"
                        android:textColor="#000"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:id="@+id/t3img"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_waktu"/>

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/t3img"
                        android:layout_marginLeft="5dp"
                        android:text="waktu"
                        android:fontFamily="@font/g_light"
                        android:textSize="15sp"
                        android:textColor="#000"/>

                    <ImageView
                        android:id="@+id/t4img"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_sajian"
                        android:layout_below="@id/t3img"/>

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/t3"
                        android:layout_toRightOf="@id/t4img"
                        android:layout_marginLeft="5dp"
                        android:text="sajian"
                        android:fontFamily="@font/g_light"
                        android:textSize="15sp"
                        android:textColor="#000"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Alat dan Bahan :"
                    android:fontFamily="@font/g_light"
                    android:textSize="18sp"
                    android:textColor="#FFC107"/>

                <TextView
                    android:id="@+id/ab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="alat bahan"
                    android:fontFamily="@font/g_light"
                    android:textSize="15sp"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Cara Memasak :"
                    android:fontFamily="@font/g_light"
                    android:textSize="18sp"
                    android:textColor="#FFC107" />

                <TextView
                    android:id="@+id/cm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="cara masak"
                    android:fontFamily="@font/g_light"
                    android:textSize="15sp"
                    android:textColor="#000"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>